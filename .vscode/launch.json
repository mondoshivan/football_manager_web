{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "server-rest-api nodemon",
            "cwd": "${workspaceRoot}/packages/server-rest-api",
            "runtimeExecutable": "${workspaceFolder}/packages/server-rest-api/node_modules/nodemon/bin/nodemon.js",
            "program": "${workspaceFolder}/packages/server-rest-api/dist/src/index.js",
            "env": {
                "FM_DB_DIALECT": "mariadb",
                "FM_DB_PORT": "3307",
                "FM_DB_FORCE": "false",
                "FM_INIT_ENABLED": "false",
                "FM_SERVICE_SESSION_SECURE": "false"

            },
            "outFiles": [
                "${workspaceFolder}/packages/server-rest-api/dist/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "restart": true,
            "sourceMaps": true,
            "outputCapture": "std",
            "smartStep": true,
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
              ],
        },
        {
          "type": "node",
          "request": "launch",
          "name": "server-rest-api (ts-node)",
          "cwd": "${workspaceRoot}/packages/server-rest-api",
          "runtimeArgs": [
              "-r",
              "ts-node/register"
          ],
          "program": "${workspaceRoot}/packages/server-rest-api/src/index.ts",
          "args": [],
          "env": {
            "FM_DB_PORT": "3307",
            "FM_DB_FORCE": "false",
            "FM_INIT_ENABLED": "false",
            "FM_SERVICE_SESSION_SECURE": "false",
            "TS_NODE_PROJECT": "${workspaceRoot}/packages/server-rest-api/tsconfig.json"
          },
          "internalConsoleOptions": "openOnSessionStart",
          "skipFiles": ["<node_internals>/**", "node_modules/**"]
        },
        {
          "name": "server-rest-api (old)",
          "type": "node",
          "request": "launch",
          "cwd": "${workspaceRoot}/packages/server-rest-api",
          "runtimeExecutable": "node",
          "runtimeArgs": ["--nolazy", "-r", "ts-node/register/transpile-only"],
          "args": ["src/index.ts"],
          "program": "${workspaceRoot}/packages/server-rest-api/src/index.ts",
          "internalConsoleOptions": "openOnSessionStart",
          "preLaunchTask": "npm: build:tsc",
          "env": {
            "FM_DB_DIALECT": "mariadb",
                "FM_DB_PORT": "3307",
                "FM_DB_FORCE": "false",
                "FM_INIT_ENABLED": "false",
                "FM_SERVICE_SESSION_SECURE": "false"
          },
          "skipFiles": ["<node_internals>/**", "node_modules/**"]
        },
        {
          "type": "node",
          "request": "launch",
          "name": "initialize (ts-node)",
          "cwd": "${workspaceRoot}/packages/initialize",
          "runtimeArgs": [
              "-r",
              "ts-node/register"
          ],
          "program": "${workspaceRoot}/packages/initialize/src/start.ts",
          "args": [],
          "env": {
            "FM_DB_DIALECT": "mariadb",
            "FM_DB_PORT": "3307",
            "FM_DB_FORCE": "true",
            "TS_NODE_PROJECT": "${workspaceRoot}/packages/initialize/tsconfig.json"
          },
          "internalConsoleOptions": "openOnSessionStart",
          "skipFiles": ["<node_internals>/**", "node_modules/**"]
        },
        {
          "name": "initialize (old)",
          "type": "node",
          "request": "launch",
          "cwd": "${workspaceRoot}/packages/initialize",
          "runtimeExecutable": "node",
          "runtimeArgs": [
            "--nolazy", // For performance reasons, 
                        // Node.js parses the functions inside JavaScript files lazily on first access. 
                        // As a consequence, breakpoints don't work in source code areas 
                        // that haven't been seen (parsed) by Node.js.
                        // This prevents the delayed parsing and ensures that breakpoints can be validated 
                        // before running the code (so they no longer "jump").
            "-r", "ts-node/register/transpile-only"],
          "args": [],
          "program": "${workspaceRoot}/packages/initialize/src/start.ts",
          "internalConsoleOptions": "openOnSessionStart",
          "preLaunchTask": "npm: build:tsc",
          "env": {
            "FM_DB_DIALECT": "mariadb",
            "FM_DB_PORT": "3307",
            "FM_DB_FORCE": "true"
          },
          "skipFiles": ["<node_internals>/**", "node_modules/**"]
        },
        {
            "name": "front-end",
            "request": "launch",
            "runtimeArgs": [
                "run-script",
                "start-front-end-dev"
            ],
            "env": {

            },
            "cwd": "${workspaceRoot}/packages/front-end",
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:4200",
            "webRoot": "${workspaceFolder}/packages/front-end"
        },
        {
            "name": "Firefox",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}/packages/server-front-end"
        }
    ]
}