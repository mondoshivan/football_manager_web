{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "noImplicitAny": true
    }
  }
}