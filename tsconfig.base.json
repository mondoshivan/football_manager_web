{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  }
}